<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100" >

    <TextView
        android:id="@+id/s208_tv_list_item_no"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="10"
        android:background="@color/background"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/s208_tv_list_item_shop"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="25"
        android:background="@color/background"
        android:gravity="center"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/lin_product_name"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="38"
        android:background="@color/background"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/s208_img_list_item_product"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/s208_tv_list_item_name"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="70"
            android:background="@color/background"
            android:gravity="center"
            android:lines="3"
            android:textColor="@color/green"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/s208_tv_list_item_quantity"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="15"
        android:background="@color/background"
        android:gravity="center"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/s208_ll_list_item_delete"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginLeft="2dp"
        android:layout_weight="12"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/s208_btn_list_item_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/btn_delete" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp" >

    <LinearLayout
        android:layout_width="1212dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp" >

        <TextView
            android:id="@+id/txt_product_name_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/u_egg"
            android:textColor="@color/green"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:minHeight="265dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_product_image_review_item"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:contentDescription="Product Image"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="#ffffff"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/txt_product_total_review_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey2"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_product_unit_1_review_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/grey4"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="#ffffff"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/txt_product_stock_review_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey2"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_product_unit_2_review_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/grey4"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:background="#ffffff"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingRight="5dp" >

            <TextView
                android:id="@+id/txt_product_must_review_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_product_unit_3_review_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/grey4"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/s04_lay_product_location_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
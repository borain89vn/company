<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/datePicker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >

            <Button
                android:id="@+id/dialog_mon_year_previous_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_previous_year"
                android:padding="4dp" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/date_picker_year_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <Button
                android:id="@+id/dialog_mon_year_next_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_next_year"
                android:padding="4dp" />
        </LinearLayout>
    </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="3" >

        <Button
            android:id="@+id/button1"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="0"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button2"
            android:layout_column="1"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="30dp"
            android:layout_row="0"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button3"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="0"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button4"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="0"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button5"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="1"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button6"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="1"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button7"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="1"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button8"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="1"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button9"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="2"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button10"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="2"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button11"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="2"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button12"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_margin="30dp"
            android:layout_row="2"
            android:background="@drawable/selector_text_color_btn_month_year_diagon"
            android:padding="15dp"
            android:textColor="@drawable/text_enable_disable_selector"
            android:textSize="25sp" />
    </GridLayout>

</LinearLayout>
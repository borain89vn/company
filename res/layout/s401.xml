<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".S04Activity" >

    <include
        android:id="@+id/menu"
        layout="@layout/include_menu" />

    <LinearLayout
        android:id="@+id/main_content"
        style="@style/layout_mp_mp_v" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF" >

            <RelativeLayout
                android:id="@+id/rela_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" >

                <include layout="@layout/merge_menu" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rela_1"
                android:layout_width="fill_parent"
                android:layout_height="105dp"
                android:layout_below="@+id/rela_header"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:text="在庫日数"
                    android:textColor="#000000"
                    android:textSize="42sp" />

                <Button
                    android:id="@+id/btn_q"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt_title"
                    android:background="@drawable/selector_btn_question" />

                <Button
                    android:id="@+id/btn_back_img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/selector_btn_back_264_94" />
                <LinearLayout
                    android:id="@+id/lin_line"
                    android:layout_width="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="10dp"
                    android:background="@drawable/green_line_bottom"
                    android:orientation="horizontal" >
                </LinearLayout>
                
            </RelativeLayout>
      
            <RelativeLayout
                android:id="@+id/rela_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/rela_1"
                android:background="#E6E6E6" >

                 

                <LinearLayout
                    android:id="@+id/lin_inventory_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:background="#E6E6E6"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <TextView
                        style="@style/confirm_list_text"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:text="No" />

                    <TextView
                        android:id="@+id/txt_header_2"
                        style="@style/confirm_list_text"
                        android:layout_width="0dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="33"
                         />

                    <TextView
                        android:id="@+id/txt_header_3"
                        style="@style/confirm_list_text"
                        android:layout_width="0dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="33"
                         />

                    <TextView
                        style="@style/confirm_list_text"
                        android:layout_width="0dp"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="28"
                        android:text="在庫分析" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_s401_inventory_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin_inventory_table"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:divider="@drawable/separator_line"
                    android:dividerHeight="3.0px">
                </ListView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
 <include
        android:id="@+id/s401_help"
        layout="@layout/help_overlay"
        android:visibility="invisible" />
</FrameLayout>
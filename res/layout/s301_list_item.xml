<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_mp_wc_v"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/s301CustomItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <LinearLayout
            style="@style/layout_wc_mp_h"
            android:layout_height="match_parent"
            android:gravity="center" >

            <TextView
                android:id="@+id/s301_tv_list_item_number"
                style="@style/s301_list_item_number"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/grey2"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey8" >

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey8" />
        </LinearLayout>

        <LinearLayout
            style="@style/s301_list_item_product_name_image"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:background="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="left"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/s301_tv_item_list_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="5dp"
                android:maxWidth="320dp"
                android:singleLine="true"
                android:textColor="@color/green"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey8" >

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/s301_tv_item_unit"
                style="@style/s301_list_item_product_unit"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/grey4"
                android:textSize="23sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey8" >

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/s301_tv_item_list_nohin_su3"
                style="@style/s301_list_item_product_amount"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:textColor="#7f7f7f"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey8" >

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/s301_tv_item_list_nohin_su2"
                style="@style/s301_list_item_product_amount"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:textColor="#7f7f7f"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey8" >

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/s301_tv_item_list_nohin_su1"
                style="@style/s301_list_item_product_amount"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey8" >

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/s301_tv_item_list_zaiko_su"
                style="@style/s301_list_item_product_zaiko_su"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:textColor="#7f7f7f"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey8" >

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/s301_tv_item_list_per_stock"
                style="@style/s301_list_item_product_perstock"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:textColor="#7f7f7f"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey8" >

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey8" />
        </LinearLayout>

        <LinearLayout
            style="@style/s301_list_item_product_button"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/s301_list_item_product_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_green_background_selector"
                android:gravity="center"
                android:onClick="onButton1Click"
                android:text="@string/s301_list_item_button1"
                android:textColor="@drawable/text_color_white_green_selector"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey8" >

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey8" />
        </LinearLayout>

        <LinearLayout
            style="@style/s301_list_item_product_button"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/s301_list_item_product_button2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/toggle_button_bg_selector"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textColor="@drawable/toggle_button_text_color_selector"
                android:textOff="@string/s301_toggle_off"
                android:textOn="@string/s301_toggle_on"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
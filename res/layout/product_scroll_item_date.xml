<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_wc_wc_v"
    android:background="@drawable/transparent"
    android:paddingLeft="8dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/slide_bg_2"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/input_slider_item"
            android:layout_width="match_parent"
            android:layout_height="70dp" >

            <TextView
                android:id="@+id/product_item_name"
                style="@style/input_slider_item_text_name"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:ellipsize="end"
                android:maxLines="2"
                android:maxWidth="237dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:singleLine="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/product_item_image"
                style="@style/layout_mp_wc"
                android:layout_width="190dp"
                android:layout_height="190dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_input_date"
            style="@style/input_slider_item_amount"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:clickable="true"
            android:paddingLeft="35dp" >

            <TextView
                android:id="@+id/product_item_year"
                style="@style/input_slider_item_text_amount"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_marginTop="-2dp"
                android:clickable="false"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/product_item_month"
                style="@style/input_slider_item_text_amount"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="-2dp"
                android:clickable="false"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/product_item_day"
                style="@style/input_slider_item_text_amount"
                android:layout_width="39dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="-2dp"
                android:clickable="false"
                android:textSize="28sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
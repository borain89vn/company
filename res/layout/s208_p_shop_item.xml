<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:weightSum="100" >

    <TextView
        android:id="@+id/s208_tv_p_shop_item_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_weight="10"
        android:background="@color/background"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/s208_tv_p_shop_item_shop_code"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_weight="30"
        android:background="@color/background"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/s208_tv_p_shop_item_shop_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="2dp"
        android:layout_weight="30"
        android:background="@color/background"
        android:gravity="center"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="30"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/s208_btn_p_shop_item_choose"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green_background_selector"
            android:text="選択"
            android:textColor="@drawable/text_color_white_green_selector"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>